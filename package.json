{
  "name": "mapeo-config-editor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "dotenv": "^8.2.0",
    "immutable": "^3.7.6",
    "lodash": "^4.17.20",
    "mapeo-schema": "^2.0.2",
    "netlify-cms-app": "^2.14.4",
    "netlify-cms-lib-widgets": "^1.6.0",
    "netlify-cms-ui-default": "^2.12.0",
    "netlify-cms-widget-object": "^2.6.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-immutable-proptypes": "^2.2.0",
    "react-scripts": "4.0.1",
    "react-sortable-hoc": "^1.0.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "postinstall": "node ./scripts/set-remote.js",
    "build": "mkdirp build && mapeo-settings build -l 'en' -o build/${npm_package_name}-v${npm_package_version}.mapeosettings",
    "build:web": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "mapeo-settings-builder": "^3.1.1",
    "mkdirp": "^1.0.4",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
